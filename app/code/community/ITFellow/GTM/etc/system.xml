<?xml version="1.0"?>
<config>
    <tabs>
        <itfellow_gtm translate="label" module="itfellow_gtm">
            <label>Google Tag Manager</label>
            <sort_order>1</sort_order>
        </itfellow_gtm>
    </tabs>
    <sections>
        <itfellow_gtm translate="label" module="itfellow_gtm">
            <label>Configuration</label>
            <tab>itfellow_gtm</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <itfellow_gtm_group translate="label">
                    <label>General</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>0</sort_order>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <container_id translate="label">
                            <label>Container ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </container_id>
                    </fields>
                </itfellow_gtm_group>
                <itfellow_gtm_remarketing_group translate="label">
                    <label>Remarketing</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_remarketing translate="label">
                            <label>Enable dynamic remarketing</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>0</sort_order>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_remarketing>
                    </fields>
                </itfellow_gtm_remarketing_group>
                <itfellow_gtm_transaction_group translate="label">
                    <label>Transaction</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_transaction translate="label">
                            <label>Enable transactions</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>0</sort_order>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_transaction>
                        <transaction_affiliation translate="label">
                            <label>Transaction affiliation</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transaction_affiliation>
                    </fields>
                </itfellow_gtm_transaction_group>
            </groups>
        </itfellow_gtm>
    </sections>
</config>
